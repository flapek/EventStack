@{
    ViewData["Title"] = "Home Page";
}
@* Search block *@
<div class="imp-thumbnail mb-3 d-block mx-auto" >
    <div id="chart_div"></div>


<div class="container">
  <div class="row">
    <div class="col">
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
        <div class=" bg-dark p-3 rounded" >
            <h4 class="text-white">Wyszukaj wydarzenie</h4>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="text-white" for="inputEmail4">Miasto</label>
                    <input name="city" type="text" class="form-control" id="inputSearchByTown" placeholder="n.p. Warszawa">
                </div>
                <div class="form-group col-md-3">
                    <label class="text-white" for="inputPassword4">Dystans</label>
                    <select name="distance" class="custom-select" id="selectSearchDistance">
                        <option selected>Wybierz...</option>
                        <option value="10">+ 10 km</option>
                        <option value="25">+ 25 km</option>
                        <option value="50">+ 50 km</option>
                        <option value="100">+ 100 km</option>
                        <option value="250">+ 250 km</option>

                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label class="text-white" for="inputPassword4">Kategoria</label>
                    <select name="category" class="custom-select" id="selectSearchCategory">
                        <option selected>Wybierz...</option>
                        <option value="1">Category 1</option>
                        <option value="2">Category 2</option>
                        <option value="3">Category 3</option>
                        <option value="4">Category 4</option>
                    </select>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">
                    <svg class="bi bi-search" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 011.415 0l3.85 3.85a1 1 0 01-1.414 1.415l-3.85-3.85a1 1 0 010-1.415z" clip-rule="evenodd" />
                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 100-11 5.5 5.5 0 000 11zM13 6.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z" clip-rule="evenodd" />
                    </svg>
                    Wyszukaj
                </button>
                <a class="text-white float-right " asp-area="" asp-controller="" asp-action="">
                    <u>
                        <small>
                            Wyszukiwanie zaawansowane
                        </small>
                    </u>
                </a>
            </div>
        </div>
        }
    </div>
    <div class="col">
<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d312779.943204475!2d20.78101231127856!3d52.232606278645015!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471ecc669a869f01%3A0x72f0be2a88ead3fc!2sWarszawa!5e0!3m2!1spl!2spl!4v1592133254606!5m2!1spl!2spl"width="700" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </div>
  </div>

        
    </div>
</div>
